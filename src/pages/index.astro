---
import Layout from '../layouts/Layout.astro';
---

<Layout title="home">
  <div class="flex flex-col justify-center items-center min-h-screen w-full">
    {/* Navigation en haut */}
    <nav class="fixed top-4 sm:top-8 md:top-12 lg:top-20 left-1/2 -translate-x-1/2 flex flex-row items-center gap-4 sm:gap-8 md:gap-16 lg:gap-24 text-xl sm:text-2xl md:text-3xl lg:text-4xl px-4">
      <a href="/" class="no-underline text-black hover:text-[#6E0B14] transition-colors duration-300 text-center">home</a>
      <a href="/projects" class="no-underline text-black hover:text-[#6E0B14] transition-colors duration-300 text-center">projects</a>
      <a href="/about" class="no-underline text-black hover:text-[#6E0B14] transition-colors duration-300 text-center">about</a>
    </nav>

    {/* Section principale avec photo et texte */}
    <div class="fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
      <div class="flex flex-col md:flex-row items-center gap-6 sm:gap-8 md:gap-12 lg:gap-16">
        {/* Photo à gauche */}
        <div class="profile-image-container flex-shrink-0">
          <img
            src="/images/vhd.jpg"
            alt="Vadim Hemzellec-Davidson"
            class="w-32 h-32 sm:w-48 sm:h-48 md:w-64 md:h-64 lg:w-80 lg:h-80 xl:w-[24rem] xl:h-[24rem] rounded-full object-cover border-2 sm:border-3 md:border-4 border-[#6E0B14] transition-transform duration-300 hover:scale-105"
          />
        </div>
        
        {/* Texte à droite */}
        <div class="flex flex-col items-center md:items-start">
          <div class="text-center md:text-left">
            <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-light mb-1 sm:mb-2">Vadim</h1>
            <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-light mb-4 sm:mb-6 md:mb-8">HEMZELLEC-DAVIDSON</h1>
          </div>
          <p class="text-sm sm:text-base md:text-lg lg:text-xl xl:text-2xl text-gray-600 font-light text-center md:text-left px-4 md:px-0">
            MSc Data Science @ École Polytechnique｜Engineering Student @ Télécom SudParis
          </p>
          <!-- Social icons centered below description -->
          <div class="mt-4 sm:mt-6 w-full flex justify-center">
            <div class="flex items-center gap-4 sm:gap-6 md:gap-8">
              <a href="https://www.linkedin.com/in/vadim-hemzellec-davidson" target="_blank" rel="noopener noreferrer" class="text-[#6E0B14] hover:text-[#8B1520] transition-colors">
                <!-- LinkedIn SVG -->
                <svg class="w-8 h-8 sm:w-9 sm:h-9 md:w-10 md:h-10" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.85-3.037-1.853 0-2.136 1.447-2.136 2.943v5.663H9.352V9h3.414v1.561h.049c.476-.9 1.637-1.85 3.369-1.85 3.603 0 4.269 2.372 4.269 5.456v6.285zM5.337 7.433c-1.144 0-2.07-.927-2.07-2.07 0-1.144.926-2.07 2.07-2.07 1.144 0 2.07.926 2.07 2.07 0 1.143-.926 2.07-2.07 2.07zM6.814 20.452H3.86V9h2.954v11.452z" />
                </svg>
              </a>

              <a href="https://github.com/vemz" target="_blank" rel="noopener noreferrer" class="text-[#6E0B14] hover:text-[#8B1520] transition-colors">
                <!-- GitHub SVG -->
                <svg class="w-8 h-8 sm:w-9 sm:h-9 md:w-10 md:h-10" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M12 0C5.37 0 0 5.373 0 12c0 5.303 3.438 9.8 8.205 11.387.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.726-4.042-1.61-4.042-1.61-.546-1.387-1.333-1.756-1.333-1.756-1.09-.745.083-.73.083-.73 1.205.085 1.838 1.238 1.838 1.238 1.07 1.835 2.809 1.305 3.495.998.108-.776.42-1.305.762-1.605-2.665-.303-5.466-1.332-5.466-5.93 0-1.31.468-2.381 1.235-3.221-.123-.303-.535-1.523.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.289-1.552 3.295-1.23 3.295-1.23.653 1.653.242 2.873.12 3.176.77.84 1.233 1.911 1.233 3.221 0 4.61-2.807 5.625-5.479 5.92.43.372.823 1.102.823 2.222 0 1.606-.015 2.902-.015 3.293 0 .322.216.694.825.576C20.565 21.796 24 17.3 24 12c0-6.627-5.373-12-12-12z" />
                </svg>
              </a>
              <a href="mailto:vadim.hemzellec-davidson@polytechnique.edu" class="text-[#6E0B14] hover:text-[#8B1520] transition-colors" title="Email Vadim">
                <!-- Envelope / Mail SVG -->
                <svg class="w-8 h-8 sm:w-9 sm:h-9 md:w-10 md:h-10" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4-8 5-8-5V6l8 5 8-5v2z" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  nav a {
    position: relative;
  }

  nav a::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: #6E0B14; /* Couleur grenat */
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  nav a:hover::after {
    transform: scaleX(1);
  }
</style>
