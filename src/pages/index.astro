---
import Layout from '../layouts/Layout.astro';
---

<Layout title="home">
  <div class="flex flex-col justify-center items-center min-h-screen w-full">
    {/* Navigation en haut */}
    <nav class="fixed top-20 left-1/2 -translate-x-1/2 flex flex-row items-center gap-24 text-4xl">
      <a href="/" class="no-underline text-black hover:text-[#6E0B14] transition-colors duration-300 text-center">home</a>
      <a href="/projects" class="no-underline text-black hover:text-[#6E0B14] transition-colors duration-300 text-center">projects</a>
      <a href="/about" class="no-underline text-black hover:text-[#6E0B14] transition-colors duration-300 text-center">about</a>
    </nav>

    {/* Section principale avec photo et texte */}
    <div class="fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-7xl mx-auto px-8">
      <div class="flex items-center gap-16">
        {/* Photo à gauche */}
        <div class="profile-image-container flex-shrink-0">
          <img
            src="/images/vhd.jpg"
            alt="Vadim Hemzellec-Davidson"
            class="w-[24rem] h-[24rem] rounded-full object-cover border-4 border-[#6E0B14] transition-transform duration-300 hover:scale-105"
          />
        </div>
        
        {/* Texte à droite */}
        <div class="flex flex-col items-start">
          <div class="text-left">
            <h1 class="text-6xl font-light mb-2">Vadim</h1>
            <h1 class="text-6xl font-light mb-8">HEMZELLEC-DAVIDSON</h1>
          </div>
          <p class="text-2xl text-gray-600 font-light">
            MSc Data Science @ École Polytechnique｜Engineering Student @ Télécom SudParis
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  nav a {
    position: relative;
  }

  nav a::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: #6E0B14; /* Couleur grenat */
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  nav a:hover::after {
    transform: scaleX(1);
  }
</style>
