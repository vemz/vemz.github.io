<style>
  /* Empêcher le scroll au-dessus du header */
  body {
    overflow-x: hidden;
  }

  nav a {
    position: relative;
  }

  nav a::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: #6E0B14; /* Couleur grenat */
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  nav a:hover::after {
    transform: scaleX(1);
  }

  .project-card {
    text-decoration: none;
    color: inherit;
  }

  .project-card:hover {
    text-decoration: none;
    border-color: #8B1520;
    box-shadow: 0 8px 25px rgba(110, 11, 20, 0.15);
  }

  .project-card:hover svg {
    transform: scale(1.1);
    transition: transform 0.2s ease;
  }

  /* Ensure inline-flex title links wrap naturally and keep the icon attached */
  .project-card a.inline-flex {
    white-space: normal;
  }

  .project-card a.inline-flex svg {
    flex-shrink: 0;
  }

  /* Keep the icon attached to the preceding text */
  .project-card .no-break {
    display: inline-block;
    white-space: nowrap;
  }

  /* Ensure the responsive grid keeps title and date aligned */
  @media (min-width: 640px) {
    .project-card .sm\:grid {
      display: grid;
    }
    .project-card .sm\:grid.sm\:grid-cols-\[1fr_auto\] {
      grid-template-columns: 1fr auto;
    }
  }
</style>
