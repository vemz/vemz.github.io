---
import Layout from '../layouts/Layout.astro';
import fs from 'fs';
import path from 'path';

// Build a cache-busted URL for the CV based on the file modification time
const cvFilePath = path.resolve('./public/cv.pdf');
let cvUrl = '/cv.pdf';
try {
  const stats = fs.statSync(cvFilePath);
  // use mtime in milliseconds (rounded) as a simple version token
  cvUrl = `/cv.pdf?v=${Math.floor(stats.mtimeMs)}`;
} catch (err) {
  // If file doesn't exist or can't be read, fall back to the plain path
  cvUrl = '/cv.pdf';
}
