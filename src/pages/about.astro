---
import Layout from '../layouts/Layout.astro';
---
<Layout title="about">
  <div class="flex flex-col justify-center items-center min-h-screen w-full">
    <nav class="fixed top-20 left-1/2 -translate-x-1/2 flex flex-row items-center gap-24 text-4xl">
      <a href="/" class="no-underline text-black hover:text-[#6E0B14] transition-colors duration-300 text-center">home</a>
      <a href="/projects" class="no-underline text-black hover:text-[#6E0B14] transition-colors duration-300 text-center">projects</a>
      <a href="/about" class="no-underline text-black hover:text-[#6E0B14] transition-colors duration-300 text-center">about</a>
    </nav>
  </div>
</Layout>

<style>
  nav a {
    position: relative;
  }

  nav a::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: #6E0B14; /* Couleur grenat */
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  nav a:hover::after {
    transform: scaleX(1);
  }
</style>
